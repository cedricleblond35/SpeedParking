@model BO.Theme
@using SolutionPrincipale.Extension;

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <h2>Edition d'un thème</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thème</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @Html.CustomEditorFor(model => model.Nom, "text")
            @Html.CustomEditorFor(model => model.Description, "text")

            @Html.CustomButtonSubmit("Modifier le thème")
        </div>
    }

    <div>
        @Html.ActionLink("Retour à la liste des thèmes", "Index", null, new { @class = "btn btn-default" })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
