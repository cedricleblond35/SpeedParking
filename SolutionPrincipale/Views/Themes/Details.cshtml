@model BO.Theme

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <h2>Détails d'un thème</h2>

    <div>
        <h4>Thème</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Nom)</dt>
            <dd>@Html.DisplayFor(model => model.Nom)</dd>
            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Editer", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" }) |
        @Html.ActionLink("Retour à la liste des thèmes", "Index", null, new { @class = "btn btn-default" })
    </p>
</div>